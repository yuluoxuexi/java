//	练习：请输入5个字符串，进行冒泡排序
	char b[5][20]={"ccc","bbb","www","aaa","eee"};
	int x,y,n;
	char a[20];
	for(x=0;x<5;x++){
		for(y=0;y<5-x-1;y++){
			n=strcmp(b[y],b[y+1]);
			if(n>0){
				strcpy(b[y],a);
				strcpy(b[y],b[y+1]);
				strcpy(b[y+1],a);
				printf("%c ",b[y]);
			}
		}
