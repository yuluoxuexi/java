#include <stdio.h>
#include <stdlib.h>
int chidan(int n);
int main(void) {
	int x=5,y;
	for(y=1;y<=5;y++){
		chidan(x);
		printf("第%d个人吃了%d个蛋\n",y,x);
	}


	return EXIT_SUCCESS;
}
int chidan(int n){
	if (n==1){
		return 5;
	} else {
		return 5+chidan(3*n);
	}
}
